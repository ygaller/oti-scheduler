# Database Configuration
DATABASE_URL="file:./dev.db"
DB_TYPE=embedded  # 'embedded' or 'remote'
DB_HOST=localhost
DB_PORT=5432
DB_NAME=scheduling
DB_USER=postgres
DB_PASSWORD=postgres

# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Authentication Configuration
# JWT_SECRET is auto-generated and stored securely - no need to set this manually!

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here  # Only used for Web application clients. Leave empty for Desktop application clients (PKCE)
GOOGLE_REDIRECT_URI_WEB=http://localhost:3000/auth/google/callback/
GOOGLE_REDIRECT_URI_ELECTRON=http://localhost:8080/callback

# Electron Configuration (set automatically by Electron main process)
ELECTRON=false
USER_DATA_PATH=

